{
  "name": "PassBox",
  "version": "1.0.1",
  "description": "A local password manager built with Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win --x64 --dir"
  },
  "keywords": [
    "password",
    "manager",
    "electron",
    "encryption"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.4.0"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.example.psave",
    "productName": "PassBox",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "portable"
    },
    "forceCodeSigning": false,
    "asar": true,
    "asarUnpack": [],
    "compression": "maximum",
    "electronLanguages": ["zh-CN", "en-US"],
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "style.css"
    ],
    "afterPack": "build/afterPack.js"
  }
}
